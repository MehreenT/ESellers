<div class="panel panel-default">
  <div class="panel-heading">Sign up</div>
  <div class="panel-body form-body">
    <%= nested_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, class: "form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, class: "control-label col-sm-2" %>
        <div class="col-sm-6">
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :username , class: "control-label col-sm-2" %>
        <div class="col-sm-6">
          <%= f.text_field :username, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password , class: "control-label col-sm-2" %>
        <i>
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %> characters minimum)
          <% end %>
        </i>
        <div class="col-sm-6">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "control-label col-sm-2" %>
        <div class="col-sm-6">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <% resource.build_image %>
      <div class="add-image">
        <%= f.fields_for :image do |a| %>
          <%= a.file_field :photo, type: :file, class: "btn btn-default btn-file" %>
        <% end %>
      </div>

      <div class="image-feilds">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
        <%= render "devise/shared/links" %>
      </div>

    <% end %>

  </div>
</div>
