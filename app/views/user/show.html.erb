<div id="order-error" class="alert alert-warning hidden">
  This item is already in cart!
</div>
<div class="panel panel-default">
  <div class="panel-heading">User Information</div>
  <div class="panel-body">
    <% if @user.image.present? %>
      <%= link_to image_tag(@user.picture_url("thumb")), @user.picture_url %>
    <% end %>
    <div class="profile-username">
      <b><%= @user.username %></b>
    </div>
    <div class="pull-left">
      <i><%= @user.email %></i>
    </div>
  </div>
</div>
<div class="row">
<% @products.each_with_index do |product, index| %>
  <div class="col-md-4">
    <div class="thumbnail">
      <div>
        <p class="pull-right">
          <%= format_price(product.price) %>
        </p>
        <p class="lead">
          <%= link_to product.title.titleize, product %>
        </p>
      </div>
      <div>
        <% if product.images.present? %>
            <%= link_to image_tag(product.images.first.photo(:thumb)), product.images.first.photo.url %>
        <% end %>
      </div>
      <div class="caption">
        <div class="btn-group btn-group-justified" role="group" aria-label="...">
          <div class="btn-group" role="group">
            <%= link_to 'Show', product, class: "btn btn-default"%>
          </div>
          <div class="btn-group" role="group">
            <%= form_for @order_item, remote: true do |f| %>
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.submit 'Add To Cart', class: "btn btn-default" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if (index+1)%3==0 %>
    <div class = 'clearfix'></div>
    <% end %>
  <% end %>
</div>

<%= paginate @products%>
<%= page_entries_info @products %>
