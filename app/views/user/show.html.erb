<div class="panel panel-default">
  <div class="panel-heading">User Information</div>
  <div class="panel-body">
    <% if @user.image.present? %>
      <%= link_to image_tag(@user.picture_url("thumb")), @user.picture_url %>
    <% end %>
    <div> Name: <%= @user.username %> </div>
    <div> Email:  <%= @user.email %> </div>
  </div>
</div>
<div class="row">
<% @products.each_with_index do | product, index| %>
  <div class="col-md-4">
    <div class="thumbnail">
      <div>
        <p class="pull-right">
          $<%= product.price %>
        </p>
        <p class="lead">
          <%= link_to (product.title).capitalize, product %>
        </p>
      </div>
      <div class= "pro-img">
        <% if product.images.present? %>
            <%= link_to image_tag(product.images.first.photo(:medium)), product.images.first.photo.url %>
        <% end %>
      </div>
      <div class="caption">
        <div class="btn-group btn-group-justified" role="group" aria-label="...">
          <div class="btn-group" role="group">
            <%= link_to 'Show', product, class: "btn btn-default"%>
          </div>
          <div class="btn-group" role="group">
            <%= link_to 'Add to Cart', product, class: "btn btn-default"%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if (index+1)%3==0 %>
    <div class = 'clearfix'></div>
    <% end %>
  <% end %>
</div>

<%= paginate @products%>
<%= page_entries_info @products %>
