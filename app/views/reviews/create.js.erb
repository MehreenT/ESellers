<% if @error.present? %>
  $("#order-error").removeClass("hidden")
  $("#error-msg").text("<%= @error %>")
<% else %>
  <% if @review %>
    $('#review_list').last('tr').append("<%= j (render @review) %>");
  <% end %>
  $('#review_description').val('')
  $('#no-review').addClass("hidden")
<% end %>
