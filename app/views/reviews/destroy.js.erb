<% if @product.reviews.count > 0 %>

  <% if @review.errors.any? %>
    alert("Errors in removing your review.")
  <% else %>
    $("#row_<%= @review.id %>").remove();
    $("#order-error").removeClass("hidden")
    $("#error-msg").text("Review is succesfully deleted!")
  <% end %>

<% else %>
  $("#order-error").removeClass("hidden")
  $("#error-msg").text("No review present")
  $("#product-review").html(' ')

<% end %>
