<h3>Listing products</h3>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <% if product.images.present? %>
          <td><%= link_to image_tag(product.images.first.photo(:thumb)), product.images.first.photo.url, class: "img-thumbnail"%></td>
        <% end %>
        <td> <%= product.title %></td>
        <td><%= product.description %></td>
        <td>$<%= product.price %></td>
        <td>
          <%= link_to 'View', product , class: "product-link" %>
          <%= link_to 'Seller', product.user, class: "product-link" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @products%>
<%= page_entries_info @products %>
