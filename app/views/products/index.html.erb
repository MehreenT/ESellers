<% if @products.present? %>
  <div id="order-error" class="hidden"><%= render "order_items/cart_error_message" %></div>
<h3>Products</h3>
<div class="row">
<% @products.each_with_index do |product, index| %>
  <div class="col-md-4">
    <div class="thumbnail">
      <div>
        <p class="pull-right">
          <%= format_price(product.price) %>
        </p>
        <p class="lead product-title">
          <%= link_to get_title(product.title), product %>
        </p>
      </div>
      <div>
        <% if product.images.present? %>
            <%= link_to image_tag(product.images.first.photo(:thumb)), product.images.first.photo.url %>
        <% end %>
      </div>
      <div class="caption">
        <div class="btn-group btn-group-justified" role="group" aria-label="...">
          <div class="btn-group" role="group">
            <%= link_to 'Show', product, class: "btn btn-default"%>
          </div>
            <div class="btn-group" role="group">
            <%= link_to 'Seller', product.user, class: "btn btn-default" %>
          </div>
          <div class="btn-group" role="group">
            <%= form_for @order_item, remote: true do |f| %>
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.submit 'Add To Cart', class: "btn btn-default" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if (index+1)%3==0 %>
    <div class = 'clearfix'></div>
    <% end %>
  <% end %>
</div>

  <div><%= paginate @products%></div>
<% else %>
  <div class="panel panel-default">
    <div class="panel-heading">Currently there are no products!</div>
  </div>
<% end %>
