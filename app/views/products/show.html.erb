<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <% @product.images.each do |picture| %>
    <%= link_to image_tag(picture.photo.url(:thumb)), picture.photo.url %>
  <% end %>
</p>

<%= render 'review' %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', :back %>
