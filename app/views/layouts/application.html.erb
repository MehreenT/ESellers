<!DOCTYPE html>
<html>
<head>
  <title>Eseller</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="animbrand">
        <%= link_to 'ESellers', root_path, class: "navbar-brand animate"%>
      </div>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <button type="button" class="btn btn-default btn-lg active" id="cart-price"><%= number_to_currency(cart_total_price) %></button>
      <% if user_signed_in? %>
        <li><%= link_to 'Add Product', new_product_path %></li>
        <li><%= link_to 'DashBoard', dashboard_path %></li>
        <li><%= link_to (current_user.username).titleize, edit_user_registration_path %></li>
        <li><%= link_to "\tSign out",destroy_user_session_path %></li>
      <% else %>
        <li><%= link_to "Admin Login",new_admin_user_session_path %></li>
        <li><%= link_to "Sign In",new_user_session_path %></li>
        <li><%= link_to "Sign Up",new_user_registration_path %></li>
      <% end %>
      <li><%= link_to "Cart",cart_path %></li>
    </ul>
  </div>
</nav>

<div class="container">
  <% flash.each do |type, value| %>
    <div class="alert alert-<%= type %>">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <strong> <%= value %> </strong>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
