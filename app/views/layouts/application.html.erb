<!DOCTYPE html>
<html>
<head>
  <title>Eseller</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="animbrand">
        <%= link_to 'ESellers', root_path, class: "navbar-brand animate"%>
      </div>
    </div>
    <ul class="nav navbar-nav navbar-left">
      <%= form_tag products_path, class: "navbar-form navbar-left", method: :get do %>
        <li class="form-group search-bar">
          <%= text_field_tag :search, params[:search], placeholder: "Search Product",class: "form-control" %>
          <%= submit_tag "Search", class:"btn btn-default" %>
        </li>
      <% end %>
      <li><button class="btn btn-default btn-lg active" id="cart-price"><%= number_to_currency(cart_total_price) %></button></li>
      <li><%= link_to "Cart", cart_path %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to 'Add Product', new_product_path %></li>
      <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
          <%= get_title(current_user.username) %> <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'DashBoard', dashboard_path %></li>
            <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
            <li><%= link_to "\tSign out",destroy_user_session_path %></li>
          </ul>
        </li>
        <li class="profile-image"><%= image_tag(current_user.image.photo.url(:thumb)) %></li>
      <% else %>
        <li><%= link_to "Admin Login", new_admin_user_session_path %></li>
        <li><%= link_to "Sign In", new_user_session_path %></li>
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
</nav>

<div class="container">
  <%= flash_messages %>
  <%= yield %>
</div>

</body>
</html>
