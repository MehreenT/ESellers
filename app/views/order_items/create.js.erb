<% if @order_item.nil? %>
  $("#order-error").removeClass("hidden");
<% else %>
  $("#order-error").addClass("hidden");
  <% if @order_item.errors.any? %>
    alert("Try later couldn't add your order item to cart.")
  <% else %>
    $("#cart-price").html("<%= number_to_currency(cart_total_price) %>")
  <% end %>
<% end %>
