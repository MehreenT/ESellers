<h3>Cart</h3>
<h4>Total: <%= cart_total_price %></h4>
<table id="cart_orders" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= link_to order_item.product.title, order_item.product , class: "product-link" %></td>
        <td><%= format_price(order_item.product.price) %></td>
        <td><%= link_to 'Remove', order_item,  method: :delete, data: { confirm: 'Do you really want to remove this item?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div><%= paginate @order_items%></div>
<div><%= page_entries_info @order_items %></div>
